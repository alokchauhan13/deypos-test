<Window x:Class="UVCE.ME.IEEE.Apps.DeyPosMainApp.Common.GenericWindowDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UVCE.ME.IEEE.Apps.DeyPosMainApp.Common"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="400" Width="600" WindowStartupLocation="CenterOwner" BorderBrush="Black" BorderThickness="1" Background="AliceBlue">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ContentControl Grid.Row="0" Background="Red" Content="{Binding ViewModelData}"></ContentControl>

            <StackPanel Grid.Row="1">
                <Button Name="button_Close" Click="button_Close_Click">Close</Button>
            </StackPanel>
            
        </Grid>
       
    </Grid>
</Window>
